{
    "meta": {
        "apiVersion": "3.0.0", 
        "name": "TA-puppet-report-viewer", 
        "displayName": "Puppet Report Viewer", 
        "restRoot": "TA_puppet_report_viewer", 
        "version": "1.5.1"
    }, 
    "pages": {
        "configuration": {
            "title": "Configuration", 
            "description": "Set up your add-on", 
            "tabs": [
                {
                    "title": "Add-on Settings", 
                    "name": "additional_parameters", 
                    "entity": [
                        {
                            "field": "puppet_enterprise_console", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Puppet Enterprise Console", 
                            "defaultValue": "https://puppet.company.com", 
                            "required": true, 
                            "type": "text", 
                            "help": "URL to access the Puppet Enterprise console"
                        }, 
                        {
                            "field": "puppet_read_user", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Username", 
                            "defaultValue": "splunk", 
                            "required": true, 
                            "type": "text", 
                            "help": "Puppet Enterprise User with PuppetDB Access"
                        }, 
                        {
                            "field": "puppet_read_user_pass", 
                            "encrypted": true, 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of password is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Password", 
                            "defaultValue": "", 
                            "required": true, 
                            "type": "text", 
                            "help": ""
                        }, 
                        {
                            "field": "splunk_hec_url", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Splunk HEC URL", 
                            "defaultValue": "https://splunk.company.coml:8088/services/collector", 
                            "required": true, 
                            "type": "text", 
                            "help": "URL to HEC services collector"
                        }, 
                        {
                            "field": "splunk_hec_token", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "HEC Token", 
                            "defaultValue": "", 
                            "required": true, 
                            "type": "text", 
                            "help": "Token from HEC configured with puppet:summary or puppet:detailed sourcetype"
                        }, 
                        {
                            "field": "bolt_user", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Bolt User", 
                            "defaultValue": "", 
                            "required": false, 
                            "type": "text", 
                            "help": "Puppet Enterprise User with Bolt Task Access (if different from PuppetDB)"
                        }, 
                        {
                            "field": "bolt_user_pass", 
                            "encrypted": true, 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of password is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Bolt Password", 
                            "defaultValue": "", 
                            "required": false, 
                            "type": "text", 
                            "help": ""
                        }, 
                        {
                            "field": "puppet_bolt_server", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Orch. Services URL", 
                            "defaultValue": "", 
                            "required": false, 
                            "type": "text", 
                            "help": "Puppet Enterprise Orchestrator URL (derived from PE Console by default)"
                        }, 
                        {
                            "field": "puppet_action_hec_token", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "Bolt Action Token", 
                            "defaultValue": "", 
                            "required": false, 
                            "type": "text", 
                            "help": "Provide token if using dedicated HEC for the puppet:action sourcetype"
                        }, 
                        {
                            "field": "puppet_db_url", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ], 
                            "label": "PuppetDB URL", 
                            "defaultValue": "", 
                            "required": false, 
                            "type": "text", 
                            "help": "URL to access PuppetDB (derived from PE Console by default)"
                        }
                    ]
                }
            ]
        }
    }
}